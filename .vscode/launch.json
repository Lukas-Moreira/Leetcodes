{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Executar C++",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Habilitar modo pretty-printing para gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "Compilar C++",
        "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
        "internalConsoleOptions": "neverOpen",
        "console": "integratedTerminal"
      }
    ]
  }
  